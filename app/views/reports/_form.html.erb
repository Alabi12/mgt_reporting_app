<%= form_with(model: report, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
  <% if report.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"> <%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</strong>
      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :date, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.datetime_field :date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

   <div class="mb-4">
        <%= form.label :members_on_duty, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :members_on_duty, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

  <div class="mb-4">
    <%= form.label :observation, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :observation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :risk_level, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :risk_level, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :recommendation, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :recommendation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :action_plan, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :action_plan, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :timelines, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :timelines, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
