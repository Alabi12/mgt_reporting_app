<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <% if notice.present? %>
    <div class="bg-green-500 px-6 py-4">
      <p class="text-white"><%= notice %></p>
    </div>
  <% end %>
  
  <div class="px-6 py-4">
    <%= render @report %>
    
    <div class="mt-8 flex justify-between items-center">
      <%= link_to "Edit this report", edit_report_path(@report), class: "text-blue-500 hover:underline" %>
      <%= link_to "Back to reports", reports_path, class: "text-blue-500 hover:underline" %>
      
      <%= button_to "Destroy this report", @report, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ml-4" %>
    </div>
  </div>
</div>
