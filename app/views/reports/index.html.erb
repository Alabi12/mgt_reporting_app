<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <div class="bg-blue-500 px-6 py-4">
    <% if current_user %>
      <h2><%= current_user.email %></h2>
      <%= link_to "Edit Account", edit_user_registration_path %>
      <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>
      <% else %>
      <%= link_to "Login", new_user_session_path %>
      <%= link_to "Create Account", new_user_registration_path %>
    <% end %>
    <h1 class="text-white text-3xl font-bold">Zimmermann Session, Nungua</h1>
    <p class="text-white mt-2"><%= notice %></p>
  </div>

  <div class="px-6 py-4">
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left text-gray-600 font-bold">Report</th>
          <th class="px-4 py-2 text-left text-gray-600 font-bold">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr class="border-b hover:bg-gray-100">
            <td class="px-4 py-2"><%= render report %></td>
            <td class="px-4 py-2">
              <%= link_to "Show", report, class: "text-blue-500 hover:underline mr-2" %>
              <%= link_to "Edit", edit_report_path(report), class: "text-blue-500 hover:underline mr-2" %>
              <%= button_to "Destroy", report, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <div class="mt-4">
      <%= link_to "New report", new_report_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out" %>
    </div>
  </div>
</div>
