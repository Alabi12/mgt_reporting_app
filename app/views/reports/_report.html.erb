<div id="<%= dom_id report %>" class="bg-white shadow-md rounded-lg p-6">
  <p class="mb-2">
    <strong class="text-gray-800">Date:</strong>
    <%= report.date %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Members On Duty:</strong>
    <%= report.members_on_duty %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Observation:</strong>
    <%= report.observation %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Risk level:</strong>
    <%= report.risk_level %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Recommendation:</strong>
    <%= report.recommendation %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Action plan:</strong>
    <%= report.action_plan %>
  </p>

  <p class="mb-2">
    <strong class="text-gray-800">Timelines:</strong>
    <%= report.timelines %>
  </p>
</div>
